# Python Worker Environment Configuration
# ASR Quality Improvement Settings

# Whisper Model Configuration
# Model size: tiny, base, small, medium, large, large-v2, large-v3
# Larger models provide better accuracy but require more memory and processing time
WHISPER_MODEL_SIZE=medium

# Compute type: int8, int8_float16, int16, float16, float32
# Higher precision provides better accuracy but uses more memory
WHISPER_COMPUTE_TYPE=float16

# ASR Processing Configuration
# Enable audio preprocessing for better transcription quality
ASR_ENABLE_PREPROCESSING=true

# Preprocessing level: minimal, standard, aggressive
# - minimal: Fastest processing, basic normalization and trimming
# - standard: Good balance of quality and speed (recommended)
# - aggressive: Best quality, slower processing
ASR_PREPROCESSING_LEVEL=standard

# Enable text post-processing for cleaner transcripts
ASR_ENABLE_POSTPROCESSING=true

# Service Configuration
# Port for the FastAPI service
PORT=8000

# Host for the FastAPI service
HOST=0.0.0.0

# Logging level
LOG_LEVEL=INFO

# Performance Configuration
# Maximum file size for processing (in bytes)
MAX_FILE_SIZE=52428800  # 50MB

# Timeout for processing (in seconds)
PROCESSING_TIMEOUT=120

# Memory Configuration
# Maximum memory usage (in MB) - adjust based on your system
MAX_MEMORY_MB=2048

# Language Support
# Enable specific language optimizations
LANG_EN=true
LANG_HI=true
LANG_ES=true
LANG_FR=true
LANG_DE=true
LANG_TA=true
LANG_TE=true
LANG_BN=true
LANG_ZH=true
LANG_JA=true
LANG_KO=true

# Audio Processing Configuration
# Target sample rate for audio processing (Hz)
AUDIO_SAMPLE_RATE=16000

# Audio normalization target dB level
AUDIO_TARGET_DB=-20.0

# Noise reduction factor (0.0 to 1.0)
NOISE_REDUCTION_FACTOR=0.8

# Silence trimming threshold (dB)
SILENCE_THRESHOLD=20

# Pre-emphasis coefficient
PREEMPHASIS_COEFF=0.97

# Text Processing Configuration
# Enable aggressive text cleaning
AGGRESSIVE_CLEANING=false

# Remove filler words
REMOVE_FILLER_WORDS=true

# Fix common ASR errors
FIX_COMMON_ERRORS=true

# Capitalize sentences
CAPITALIZE_SENTENCES=true

# Development Configuration
# Enable debug mode
DEBUG=false

# Enable detailed logging
VERBOSE_LOGGING=false

# Test Configuration
# Enable test mode (for development)
TEST_MODE=false

# Mock external services in test mode
MOCK_EXTERNAL_SERVICES=false

