{
  "name": "media-analyzer",
  "version": "1.0.0",
  "description": "Media analysis platform for brand-fit and compliance checking",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "worker:python": "cd apps/worker-python && source venv/bin/activate && python main.py",
    "worker:python:install": "cd apps/worker-python && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "test:all": "./run-tests.sh",
    "test:node": "./run-tests.sh --node",
    "test:python": "./run-tests.sh --python",
    "test:coverage": "./run-tests.sh --coverage",
    "test:unit": "./run-tests.sh --specific node unit && ./run-tests.sh --specific python unit",
    "test:integration": "./run-tests.sh --specific node integration && ./run-tests.sh --specific python integration",
    "test:api": "./run-tests.sh --node",
    "test:worker": "./run-tests.sh --python",
    "docs:serve": "./serve-swagger.sh",
    "docs:validate": "./validate-openapi.sh",
    "docs:generate-client": "npx @openapitools/openapi-generator-cli generate -i openapi.yaml -g typescript-axios -o ./generated/client"
  },
  "devDependencies": {
    "turbo": "^1.10.12",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
