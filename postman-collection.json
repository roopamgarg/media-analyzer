{
  "info": {
    "name": "Media Analyzer API",
    "description": "Collection for testing the Media Analyzer API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Analyze Video (URL)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"input\": {\n    \"url\": \"https://example.com/sample-video.mp4\"\n  },\n  \"brandKit\": {\n    \"inline\": {\n      \"brandName\": \"TestBrand\",\n      \"palette\": [\"#FF0000\", \"#00FF00\", \"#0000FF\"],\n      \"doDonts\": {\n        \"do\": [\"Use our brand colors\", \"Be positive and engaging\"],\n        \"dont\": [\"Mention competitors\", \"Make health claims\"]\n      },\n      \"competitors\": [\"CompetitorA\", \"CompetitorB\"],\n      \"keywords\": {\n        \"tone\": [\"friendly\", \"professional\", \"innovative\"],\n        \"avoid\": [\"aggressive\", \"negative\", \"misleading\"]\n      }\n    }\n  },\n  \"category\": \"Beauty\",\n  \"options\": {\n    \"returnPdf\": false,\n    \"evidence\": {\n      \"screenshots\": true,\n      \"transcriptSpans\": true,\n      \"frames\": [0, 1, 3, 5, 10]\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/v1/analyze",
          "host": ["{{base_url}}"],
          "path": ["v1", "analyze"]
        }
      }
    },
    {
      "name": "Get Analysis Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/v1/analyses/{{analysis_id}}",
          "host": ["{{base_url}}"],
          "path": ["v1", "analyses", "{{analysis_id}}"]
        }
      }
    },
    {
      "name": "Get Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/metrics",
          "host": ["{{base_url}}"],
          "path": ["metrics"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "jwt_token",
      "value": "your-jwt-token-here"
    },
    {
      "key": "analysis_id",
      "value": "an_abc123"
    }
  ]
}
